{
  "name": "visual-platform",
  "version": "1.0.0",
  "description": "VISUAL - Plateforme d'investissement de contenus visuels",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && python -m uvicorn server:app --reload --host 0.0.0.0 --port 8001",
    "dev:frontend": "cd frontend && yarn dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && yarn build",
    "build:backend": "cd backend && python -m pip install -r requirements.txt",
    "start": "cd backend && python -m uvicorn server:app --host 0.0.0.0 --port 8001",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && python -m pytest",
    "test:frontend": "cd frontend && yarn test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && python -m flake8 .",
    "lint:frontend": "cd frontend && yarn lint",
    "deploy": "bash deployment/deploy.sh",
    "deploy:build": "bash deployment/deploy.sh build",
    "deploy:logs": "bash deployment/deploy.sh logs",
    "deploy:status": "bash deployment/deploy.sh status"
  },
  "keywords": [
    "investment",
    "visual-content",
    "crowdfunding",
    "streaming",
    "fastapi",
    "react",
    "typescript"
  ],
  "author": "VISUAL Platform Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "python": ">=3.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/visual-platform/visual.git"
  }
}